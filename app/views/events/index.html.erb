<% @events_now = Event.where(time: (DateTime.now-1.day..DateTime.now+2.day)) %>

<% if @events_now != [] %>
  <div class="contain" style="margin-top: 100px;">
    <h3 class="tile__tag mb-20 text-white ml-30">Happening now</h3>
    <div class="row">
      <div class="row__inner" id="top_header">
      <%= render 'carrousel', events: @events_now %>
      </div>
    </div>
  </div>
<% end %>


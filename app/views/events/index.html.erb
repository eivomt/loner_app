<div class="contain" style="margin-top: 100px;">
  <div class="row">
    <div class="row__inner">
      <% happening_now = Event.where(time: (DateTime.now-2.hour..DateTime.now+2.hour)) %>
      <% happening_now.each do |event| %>
        <div class="tile">
          <div class="tile__media">
            <h2 class="tile__tag">Happening Now!</h2>
            <div class="tile_img_contain">
              <div class="absolute">
                  <h2 class="tile__going"><%= event.people_going %></h2>
                  <h2 class="tile__going red"><%= event.people_needed %></h2>
              </div>
              <img class="tile__img" src="../assets/beer" alt=""  />
            </div>

            <h3><%= event.name %></h3>
            <p><%= event.description %></p>
            <!-- the strftime makes the display of the date and time prettyyyyy -->
            <p> <%= t = event.time.strftime("%b, %-d, %Y, %H:%M") %></p>
          </div>
        </div>
      <% end %>
    </div>

